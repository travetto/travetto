{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2022"
    ],
    "strict": true,
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "."
  },
  "files": [
    "src/manifest.ts",
    "src/package.ts",
    "src/path.ts",
    "src/types.ts",
    "index.ts"
  ]
}