{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2022"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "."
  },
  "files": [
    "src/compiler.ts",
    "src/state.ts",
    "src/util.ts",
    "support/main.output.ts",
    "support/main.setup.ts",
    "index.ts"
  ]
}