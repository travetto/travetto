  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/trv",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/.trv_output/**/*.js",
      ],
      "args": [
        "run",
        "rest"
      ],
      "cwd": "${workspaceFolder}/related/todo-app"
    }
  ]
}