{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Compiler",
      "program": "${workspaceFolder}/.trv_compiler/node_modules/@travetto/compiler/support/compiler-entry.js",
      "env": {
        "TRV_MANIFEST": "${workspaceFolder}/.trv_output/node_modules/@travetto/schema/manifest.json"
      },
      "args": [
        "${workspaceFolder}/module/schema/test/models/validation.ts"
      ],
      "sourceMaps": true,
      "pauseForSourceMap": true,
      "outFiles": [
        "${workspaceFolder}/.trv_compiler/**/*.js",
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/.trv_compiler/**",
      ],
      "runtimeSourcemapPausePatterns": [
        "${workspaceFolder}/.trv_compiler/**/*.js",
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**",
        "node:internals/**",
        "internal/**",
        "**/@travetto/base/src/console.js",
        "**/@travetto/base/src/proxy.js",
        "**/@travetto/log/src/service.js",
        "**/@travetto/log/src/common.js",
        "**/@travetto/log/src/appender/console.js",
        "**/@travetto/context/src/service.js",
        "**/@travetto/rest/src/util/route.js",
        "**/tslib/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Todo Rest",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/trv",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/.trv_output/**/*.js",
      ],
      "env": {
        "REST_PORT": "4000",
        "TRV_MODULE": "@travetto/todo-app",
        "TRV_DYNAMIC": "1"
      },
      "cwd": "${workspaceFolder}/related/todo-app",
      "args": [
        "run:rest",
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Test Tap-Streamed",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/trv",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/.trv_output/**/*.js",
      ],
      "env": {
        "TRV_MODULE": "@travetto/mono-repo"
      },
      "cwd": "${workspaceFolder}",
      "args": [
        "test",
        "-f",
        "tap-streamed"
      ],
    }
  ]
}