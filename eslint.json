{
  "ignorePatterns": [
    "module/scaffold/templates"
  ],
  "plugins": [
    "unused-imports"
  ],
  "overrides": [
    {
      "files": "module/{transformer,compiler}/**",
      "rules": {
        "no-restricted-imports": 0
      }
    },
    {
      "files": "{module,global-test}/*/support/transform*",
      "rules": {
        "no-restricted-imports": 0
      }
    },
    {
      "files": "{module,related}/*/{doc/**/*.ts,README.ts}",
      "rules": {
        "max-len": 0,
        "@typescript-eslint/quotes": "warn",
        "@typescript-eslint/indent": 0,
        "@typescript-eslint/consistent-type-assertions": 0,
        "@typescript-eslint/explicit-function-return-type": 0
      }
    },
    {
      "files": "{module,global-test}/*/{test,support/test}/**/*.ts",
      "rules": {
        "@typescript-eslint/consistent-type-assertions": 0,
        "@typescript-eslint/explicit-function-return-type": 0
      }
    },
    {
      "files": "module/scaffold/support/{resources,fixtures}/**/*.ts",
      "rules": {
        "@typescript-eslint/consistent-type-assertions": 0,
        "@typescript-eslint/explicit-function-return-type": 0
      }
    },
    {
      "files": "related/{todo-app,travetto.github.io}/**/*.ts",
      "rules": {
        "@typescript-eslint/consistent-type-assertions": 0,
        "@typescript-eslint/explicit-function-return-type": 0
      }
    }
  ],
  "rules": {
    "unused-imports/no-unused-imports": "error"
  }
}
