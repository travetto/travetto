{
  "author": {
    "email": "travetto.framework@gmail.com",
    "name": "Travetto Framework"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "type": "commonjs",
  "private": true,
  "name": "@travetto/mono-repo",
  "license": "MIT",
  "scripts": {
    "prestart": "npm ci",
    "start": "trvc clean; trvc start ",
    "test": "trv test -f tap-streamed",
    "lint": "trv lint",
    "upgrade-deps": "npm update -S",
    "reinit-deps": "find . -name 'node_modules' -type d | grep -v -E '(github[.]io|vscode-plugin|[.]trv)' | xargs rm -rf; rm package-lock.json; npm i"
  },
  "travetto": {
    "globalModules": [
      "@travetto/test",
      "@travetto/cli",
      "@travetto/doc",
      "@travetto/command"
    ],
    "docBaseUrl": "https://github.com/travetto/travetto/tree/main",
    "docOutputs": [
      "README.md",
      "DOC.html"
    ]
  },
  "workspaces": [
    "module/*",
    "global-test/*",
    "related/todo-app"
  ],
  "overrides": {
    "compression": {
      "debug": "^4.3.4"
    },
    "express": {
      "debug": "^4.3.4",
      "body-parser": {
        "debug": "^4.3.4"
      },
      "final-handler": {
        "debug": "^4.3.4"
      },
      "send": {
        "debug": "^4.3.4"
      }
    }
  },
  "devDependencies": {
    "@travetto/repo": "^3.4.10",
    "@types/debug": "^4.1.12",
    "@types/node-forge": "^1.3.10",
    "@types/vscode": "^1.84.2",
    "debug": "^4.3.4",
    "node-forge": "^1.3.1"
  }
}
